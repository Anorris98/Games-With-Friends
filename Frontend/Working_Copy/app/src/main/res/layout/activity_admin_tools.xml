<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdminTools.AdminToolsActivity">

  <Button
      android:id="@+id/Button_UserAccountSettings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="292dp"
      android:text="User Account Settings"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/Button_friendGroups"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Manage Friend Groups"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Button_UserAccountSettings" />

  <Button
      android:id="@+id/Button_Table3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="Table 3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Button_friendGroups" />

  <Button
      android:id="@+id/Button_Table4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Table 4"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Button_Table3"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/Textview_AdminGreeting"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Admin Control Center"
      android:textSize="34sp"
      app:layout_constraintBottom_toTopOf="@+id/Button_UserAccountSettings"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.488"
      tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>